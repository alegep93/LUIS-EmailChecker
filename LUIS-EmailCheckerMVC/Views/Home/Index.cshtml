@model LUIS_EmailCheckerMVC.Models.Query

@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span>Email:</span>
                @Html.TextBox("Email", "", new { @class = "form-control" })
                <br />
                <span>Password:</span>
                @Html.TextBox("Password", "", new { @type = "password", @class = "form-control" })
                <br />
                <input type="submit" value="Controlla casella di posta" />
            </div>
        </div>
    }
    <div class="form-group">
        <span class="col-md-4"><strong class="pull-right">Richiesta di assistenza di:</strong></span>
        <div class="col-md-8">
            @Html.DisplayFor(model => model.FirmaCalce,
           new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>
